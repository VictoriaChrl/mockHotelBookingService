<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:background">@color/white</item>
    </style>


    <style name="Rating">
        <item name="android:textColor">@color/rating_text</item>
        <item name="android:textSize">@dimen/rating_text_size</item>
    </style>

    <style name="HotelName">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/hotel_name_text_size</item>
    </style>

    <style name="HotelAddress">
        <item name="android:textColor">@color/hotel_address_text</item>
        <item name="android:textSize">@dimen/hotel_address_text_size</item>
    </style>

    <style name="HotelPrice">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/hotel_price_text_size</item>
    </style>

    <style name="HotelPriceSum">
        <item name="android:textColor">@color/grey_color_text</item>
        <item name="android:textSize">@dimen/hotel_price_sum_text_size</item>
    </style>

    <style name="Peculiarity">
        <item name="android:textColor">@color/grey_color_text</item>
        <item name="android:textSize">@dimen/peculiarity_text_size</item>
    </style>

    <style name="AboutHotelContent">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/hotel_about_content_text_size</item>
    </style>

    <style name="Buttons">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/buttons</item>
    </style>

    <style name="OptionTitle">
        <item name="android:textColor">@color/option_color</item>
        <item name="android:textSize">@dimen/option_title_size</item>
    </style>

    <style name="OptionText">
        <item name="android:textColor">@color/grey_color_text</item>
        <item name="android:textSize">@dimen/option_text_size</item>
    </style>

    <style name="AboutRoomButton">
        <item name="android:textColor">@color/button_about_room_color</item>
        <item name="android:textSize">@dimen/about_room_size</item>
    </style>

    <style name="InfoRoomBookingText">
        <item name="android:textColor">@color/info_room_booking_color</item>
        <item name="android:textSize">@dimen/info_room_booking_text_size</item>
    </style>

    <style name="FinalInfoRoomBookingText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/info_room_booking_text_size</item>
    </style>

    <style name="BoldTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/info_customer_title_text_size</item>
    </style>

    <style name="TextForCustomer">
        <item name="android:textColor">@color/text_for_customer_color</item>
        <item name="android:textSize">@dimen/text_for_customer_text_size</item>
    </style>

    <style name="TotalPriceText" parent="FinalInfoRoomBookingText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/total_price_text_color</item>
    </style>

    <style name="EditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/edit_text_background_color</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/edit_text_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/edit_text_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/edit_text_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/edit_text_radius</item>
        <item name="android:textColorHint">@color/edit_text_hint_color</item>
        <item name="android:textColor">@color/total_price_text_color</item>
    </style>

    <style name="SuccessPaymentColor">
        <item name="android:textColor">@color/text_for_customer_color</item>
        <item name="android:textSize">@dimen/success_payment_text_size</item>
    </style>
</resources>